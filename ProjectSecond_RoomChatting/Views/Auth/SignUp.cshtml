@{
    Layout = "_AuthLayout";
}
@model SignUpViewModel

<div class="content align-items-center">
    <div class="w-100 ">
        <div class="login-left">

            <div class="account-content">
                <div class="login-header">
                    <a href="index.html">
                        <img src="assets/img/logo-full.png" alt>
                    </a>
                </div>
                <div class="form-col">
                    <div class="login-text-details">
                        <h3>Sign up</h3>
                        <p>Lets get you all setup so you can verify your oersonal account and begin setting up your Profile.</p>
                    </div>
                    <form asp-controller="Auth" asp-action="signup" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input asp-for="fullname" class="form-control form-control-lg group_formcontrol" type="text">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="email" class="form-control form-control-lg group_formcontrol" type="email">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="password" class="form-control form-control-lg group_formcontrol" type="password">
                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input asp-for="confirmPassword" class="form-control form-control-lg group_formcontrol" type="password">
                        </div>
                        <div class="form-group">
                            <label>BirthDay</label>
                            <input asp-for="birthDay" class="form-control form-control-lg group_formcontrol" type="datetime-local">
                        </div>
                        <div class="form-group">
                            <label>Avatar</label>
                            <input asp-for="file" class="form-control form-control-lg group_formcontrol" type="file">
                        </div>
                        <div class="pt-1">
                            <div class="text-center">
                                <button class="btn newgroup_create btn-block d-block w-100" type="submit">Create Account</button>
                            </div>
                        </div>
                        <div class="text-center dont-have">Already have an Account? <a href="login-email.html">Login</a></div>
                    </form>
                </div>
                <div class="back-btn-col text-center">
                    <a href="index.html"><span><i class="fas fa-caret-left"></i></span> Back</a>
                </div>
            </div>

        </div>
        <div class="login-right signup-bg">
        </div>
    </div>
</div>


