@using ViewModels.Auth;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_AuthLayout";
}
@model LoginViewModel
<div class="content align-items-center">
    <div class="w-100 ">
        <div class="login-left">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="account-content">
                <div class="login-header">
                    <a href="index.html">
                        <img src="assets/img/logo-full.png" >
                    </a>
                </div>
                <div class="form-col">
                    <div class="login-text-details">
                        <h3>Log in</h3>
                        <p>Login with your Data that you entered during your Registration</p>
                    </div>
                    <form asp-action="login" asp-controller="Auth" method="post">
                        <div class="form-group">
                            <label>Your Email</label>
                            <input class="form-control form-control-lg group_formcontrol" asp-for="email" type="email">
                            <span class="text-danger" asp-validation-for="email"></span>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input class="form-control form-control-lg group_formcontrol" asp-for="password" type="text">
                            <span class="text-danger"  asp-validation-for="password"></span>
                        </div>
                        <div class="form-group">
                            <label class="custom-check d-flex"> 
                                <input type="checkbox">Keep me logged in
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="pt-1">
                            <div class="text-center">
                                <button class="btn newgroup_create btn-block d-block w-100" type="submit">Login</button>
                            </div>
                        </div>
                        <div class="text-center dont-have">Don’t have an account? <a href="/Auth/SignUp">Signup</a></div>
                        <div class="text-center mt-3">
                            <span class="forgot-link">
                                <a href="forgotpassword-email.html" class="text-end">Forgot Password ?</a>
                            </span>
                        </div>
                    </form>
                </div>
                <div class="back-btn-col text-center">
                    <a href="index.html"><span><i class="fas fa-caret-left"></i></span> Back</a>
                </div>
            </div>

        </div>
        <div class="login-right">
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}